<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.gdn.rentalan">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ApplicationBase"
        android:allowBackup="true"
        android:icon="@drawable/ic_rentalan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.email.RegisterEmailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.register.otp.RegisterOtpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.register.profile.RegisterProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.main.user.UserMainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.main.admin.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.category.CategoryAddActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.product.admin.ProductDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.user.UserDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.product.renter.ProductActivityCheckout"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.transaction.TransactionDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.search.SearchActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>