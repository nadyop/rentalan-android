<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar"
                    app:titleTextColor="@color/white"
                    app:navigationIcon="@drawable/ic_left"
                    android:layout_marginBottom="@dimen/spacing_super_larger"
                    app:title="@string/my_product"/>

            <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminate="true"/>

            <LinearLayout
                    android:id="@+id/container_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/spacing_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fill_in_self_data">

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/iv_product"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/no_image_available"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/bt_upload"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                                android:id="@+id/bt_upload"
                                style="@style/Button.Normal.Blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/image"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/nameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/product_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/descInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/description"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/categoryInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorPrimary"
                              android:text="@string/category"/>

                    <Spinner
                            android:id="@+id/sp_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_smaller"
                            android:layout_marginBottom="@dimen/spacing_normal"
                            android:spinnerMode="dropdown"/>

                    <View style="@style/Separator"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/priceInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_price_perday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/product_per_day_price"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/stockInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_stock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/product_stock"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/dpInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/product_dp"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/lateInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                    <EditText
                            android:id="@+id/et_late_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/product_late_charge"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                        android:id="@+id/bt_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_larger"
                        android:background="@color/colorAccent"
                        android:text="@string/save"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>