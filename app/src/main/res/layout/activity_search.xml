<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_2_100"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            app:title="@string/search"
            app:navigationIcon="@drawable/ic_close_dark"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            card_view:cardCornerRadius="@dimen/spacing_small"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/keyInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="@dimen/spacing_small">

                    <EditText
                        android:id="@+id/et_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/spacing_extra_smaller"
                        android:hint="@string/keyword"
                        android:paddingLeft="@dimen/spacing_normal"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cityInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="@dimen/spacing_small">

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/spacing_extra_smaller"
                        android:hint="@string/city"
                        android:paddingLeft="@dimen/spacing_normal"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/provinceInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="@dimen/spacing_small">

                    <EditText
                        android:id="@+id/et_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/spacing_extra_smaller"
                        android:hint="@string/province"
                        android:paddingLeft="@dimen/spacing_normal"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/abc_text_size_small_material"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/bt_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_larger"
            android:background="@color/colorAccent"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>
</layout>