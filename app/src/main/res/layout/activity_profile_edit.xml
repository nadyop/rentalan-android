<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_bgcolor_white"
                android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar"
                    android:layout_height="57dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_left"
                    app:title="@string/self_data"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_gravity="center"
                android:indeterminate="true"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/cv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fill_in_self_data">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_user_ktp"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/no_image_available"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/bt_upload"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/bt_upload"
                        style="@style/Button.Normal.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KTP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                app:cardCornerRadius="@dimen/spacing_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fill_in_self_data">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_user_self"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/no_image_available"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/bt_uploadSelf"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/bt_uploadSelf"
                        style="@style/Button.Normal.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selfie KTP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/cv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_small"
                    app:cardCornerRadius="@dimen/spacing_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fill_in_self_data">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/surenameInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_surename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/surename"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/phoneInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/phone"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/emailInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/nikInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/spacing_small">

                        <EditText
                            android:id="@+id/et_nik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_extra_smaller"
                            android:hint="@string/nik"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/addressInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/address"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/provinceInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/province"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/cityInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/city"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/genderInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/gender"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/birthInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:textColorHint="@color/colorPrimary"
                            android:layout_margin="@dimen/spacing_small">

                        <EditText
                                android:id="@+id/et_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/spacing_extra_smaller"
                                android:hint="@string/birth"
                                android:imeOptions="actionNext"
                                android:inputType="date"
                                android:textSize="@dimen/abc_text_size_small_material"/>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                    android:id="@+id/bt_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_larger"
                    android:background="@color/colorAccent"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"/>
        </LinearLayout>
    </ScrollView>

</layout>